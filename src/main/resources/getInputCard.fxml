<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todoapplication.GetInputCardController">
   <children>
      <BorderPane layoutX="30.0" layoutY="25.0" prefHeight="300.0" prefWidth="500.0" style="-fx-border-width: 5; -fx-border-color: black; -fx-border-radius: 10;">
         <bottom>
            <VBox prefHeight="63.0" prefWidth="476.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="460.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="565.0" text="Choose Priority" textAlignment="CENTER" />
                        <ChoiceBox id="priorityChoice" fx:id="priorityChoice" prefHeight="25.0" prefWidth="514.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ChoiceBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="38.0" prefWidth="310.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </BorderPane.margin>
                     <children>
                        <DatePicker id="datePicker" fx:id="datePicker" promptText="Choose Date" />
                        <ComboBox id="hourBox" fx:id="hourBox" prefWidth="150.0" promptText="Choose Hour" />
                        <ComboBox id="minuteBox" fx:id="minuteBox" prefWidth="150.0" promptText="Choose Minute" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </VBox>
         </bottom>
         <center>
            <TreeView id="taskTreeView" fx:id="taskTreeView" editable="true" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TreeView>
         </center>
         <top>
            <TextField id="mainTaskText" fx:id="mainTaskText" alignment="CENTER" promptText="Main Task" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="30.0" right="30.0" top="10.0" />
               </BorderPane.margin>
            </TextField>
         </top>
      </BorderPane>
      <ImageView id="priorityImage" fx:id="priorityImage" fitHeight="79.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true">
         <viewport>
            <Rectangle2D height="10.0" />
         </viewport>
         <effect>
            <Lighting bumpInput="$null" diffuseConstant="1.05" specularConstant="0.47" specularExponent="26.05" surfaceScale="3.84">
               <light>
                  <Light.Distant color="RED" />
               </light>
            </Lighting>
         </effect>
         <image>
         </image>
      </ImageView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</Pane>
